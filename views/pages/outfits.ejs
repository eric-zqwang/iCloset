<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Outfit Collages</title>
  <style>
    body {
      margin: 0;
      background-color: rgb(170, 172, 198);
    }
    .main {
      top: 145px;
      left: 210px;
      position: fixed;
    }
    .sidenav ul {
      top: 120px;
      list-style-type: none;
      margin: 0;
      padding: 0;
      background-color: rgb(131, 134, 170);
      position: fixed;
      width: 160px;
      height: 100%;
      overflow: auto;
    }
    .sidenav li {
      float: left;
    }
    .sidenav li a {
      font-size: large;
      font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
      font-weight: 600;
      display: block;
      color: whitesmoke;
      padding: 15px 20px;
      text-align: center;
      text-decoration: none;
      width: 120px;
    }
    .sidenav li a.active {
      background-color: #04AA6D;
      color: white;
    }
    .sidenav li a:hover:not(.active) {
      color: rgba(240, 248, 255, 0.671);
    }
    .outfitContent {
      margin-left: 160px;
      padding: 1px 16px;
      overflow: scroll;
      width: 50%;
      border-collapse: collapse;
      height: 700px;
    }
  </style>
</head>

<body>

  <%- include ("../partials/pageNav.ejs") %>
    <div class="sidenav">
      <ul>
        <li><a href="#all" onclick="changeCategory('imageDraggable')">All</a></li>
        <li><a href="#shirts" onclick="changeCategory('Shirts')">Shirts</a></li>
        <li><a href="#coats" onclick="changeCategory('Coats')">Coats</a></li>
        <li><a href="#suits"onclick="changeCategory('Suits')">Suits</a></li>
        <li><a href="#sweaters"onclick="changeCategory('Sweaters')">Sweaters</a></li>
        <li><a href="#pans"onclick="changeCategory('Pants')">Pants</a></li>
        <li><a href="#jeans"onclick="changeCategory('Jeans')">Jeans</a></li>
        <li><a href="#shoes"onclick="changeCategory('Shoes')">Shoes</a></li>
        <li><a href="#bags"onclick="changeCategory('Bags')">Bags</a></li>
        <li><a href="#accessories"onclick="changeCategory('Accessories')">Accessories</a></li>
        <li><a href="#others"onclick="changeCategory('Others')">Others</a></li>
      </ul>
    </div>
    <div class="main">
      <div>
        <h2>Hello, <%=currentuids[0].uname%>, click on the image to view details.</h2>
        <p>Click &darr; &darr; &darr; to add clothes!!!</p>
        <a href="./uploadimg"><img src="/uploads/add-photo-icon.jpg" alt="upload image"
            style="width:200px;height:200px;"></a></p>
      </div>
      <div class="" id="outfits-img">
        <% if(results.length>0){%>
             <% results.forEach(function(r) { %>
              <span  class="imageDraggable <%= r.category_type%>">
             <a href="/:<%= currentuids[0].uid %>/outfits/:<%= r.imgid %>" > 
              <img src="data:image/gif;base64,<%= r.txtimg %>" style="padding: 15px;" draggable="true" width="200" height="200" alt=""></a>
             </span >
              <% }); %>
          <% };%>
      </div>
    </div>
</body>
<script>
  const imagestore =  document.querySelectorAll(".imageDraggable");  
  function changeCategory(val) {  
    var img = imagestore;
    document.getElementById("outfits-img").textContent="";
    for(i=0;i<img.length;i++){
      if(img[i].classList.contains(val)){
        document.getElementById("outfits-img").append(img[i]);
      }
    }
  }
</script>
</html>
