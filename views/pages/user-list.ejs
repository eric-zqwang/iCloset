<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>iCloset-main User List</title>
    <link rel="stylesheet" href="./stylesheets/index.css">
    <style type="text/css">
    .nav {
        background: #A10948;
    }
    .nav .fa {
        font-size: 38px;
    }
    .nav-item {
        display: inline-block;
        line-height: 60px;
        height: 60px;
        font-family: sans-serif;
        color: #EEE;
        padding: 0 5px;
    }
    .nav-item a {
        color: #EEE;
        text-decoration: none;
    }
    .nav-item:hover {
        background: #AAA;
    }
    .container {
        width: 60%;
        margin: auto;
    }
    .container table {
        text-align: center;
        width: 100%;
    }
    </style>
</head>
<body>
    <div class="nav">
        <ul>
            <li class="nav-item">
                <a href="/"><i class="fa fa-home"></i></a>
            </li>
            <li class="nav-item">
                <a href="/">HOME</a>
            </li>
            <li class="nav-item">
                <a href="/user-list">USERS</a>
            </li>
        </ul>
    </div>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>EMAIL</th>
                    <th>NAME</th>
                    <th>PASSWORD</th>
                    <th>ADMIN</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(record) { %>
                <tr>
                    <td><%= record.umail %></td>
                    <td><%= record.uname %></td>
                    <td><%= record.upswd %></td>
                    <td><%= record.admin ? 'YES' : 'NO' %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
